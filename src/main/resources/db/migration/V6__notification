USE `blito`;
CREATE TABLE `blito`.`notification` (
  `notification_id` BIGINT(20) NOT NULL,
  `message` TEXT(500) NULL,
  `seen` BIT(1) NULL,
  `reciever_id` BIGINT(20) NULL,
  `sender_id` BIGINT(20) NULL,
  `date` DATETIME NULL,
  `notification_type` VARCHAR(45) NULL,
  PRIMARY KEY (`notification_id`),
  INDEX `user_id_idx` (`reciever_id` ASC, `sender_id` ASC),
  CONSTRAINT `user_id`
    FOREIGN KEY (`reciever_id` , `sender_id`)
    REFERENCES `blito`.`user` (`user_id` , `user_id`)
    ON DELETE CASCADE
    ON UPDATE CASCADE);
